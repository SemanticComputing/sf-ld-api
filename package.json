{
  "name": "sf-browser",
  "version": "0.0.1",
  "description": "Semantic Finlex Linked Data API",
  "main": "dist",
  "scripts": {
    "build-server": "babel src -s -D -d dist --ignore \"src/client\",\"src/legacy/public\",\"src/sf-docs\" --presets es2015,react,stage-0 && cp -r src/legacy/public dist/legacy/ && cp -r src/legacy/views dist/legacy/ && cp -r src/sf-docs dist/",
    "watch-server": "nodemon -w src -e js,jsx --exec \"babel-node src/server --presets es2015,react --plugins transform-decorators-legacy\"",
    "build-client": "mkdir -p dist/public && catw -c 'lessc -' 'src/client/styles/*.less' > dist/public/bundle.css && browserify src/client/index.jsx -o dist/public/bundle.js -t [ babelify --presets [ es2015 react stage-0 ] --plugins [transform-decorators-legacy] ]",
    "watch-client": "watch 'npm run build-client' src/",
    "dev": "npm run watch-client & npm run watch-server & wait",
    "start": "node dist/server",
    "prestart": "npm run -s build",
    "test": "jest"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./node_modules/jest-enzyme/lib/index.js",
    "testMatch": [
      "**/src/test/**/*"
    ]
  },
  "author": "apoksane <arttu.oksanen@aalto.fi>",
  "license": "MIT",
  "dependencies": {
    "bluebird": "^3.5.0",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "express-validator": "^3.2.0",
    "history": "<4.0.0",
    "immutable": "^3.8.1",
    "jade": "^1.11.0",
    "jquery": "^3.2.1",
    "jsonld": "^0.4.12",
    "moment": "^2.18.0",
    "morgan": "^1.8.0",
    "path": "^0.12.7",
    "react": "^15.4.2",
    "react-autocomplete": "^1.5.6",
    "react-bootstrap": "^0.31.0",
    "react-dom": "^15.4.2",
    "react-router": "<4.0.0",
    "react-tooltip": "^3.3.0",
    "resource-router-middleware": "^0.6.0",
    "serve-favicon": "^2.4.1",
    "superagent": "^3.5.0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.0",
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^14.1.0",
    "catw": "^1.0.1",
    "enzyme": "^2.9.1",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.3.0",
    "jest": "^20.0.4",
    "jest-enzyme": "^3.8.1",
    "less": "^2.7.2",
    "nodemon": "^1.9.2",
    "react-dom": "^15.6.1",
    "react-test-renderer": "^15.6.1",
    "regenerator-runtime": "^0.11.0",
    "watch": "^1.0.2"
  }
}
